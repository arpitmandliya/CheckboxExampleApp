<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.java2blog.checkboxexampleapp.MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Countries : "
        />
    <CheckBox
        android:id="@+id/checkBoxIndia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/textview"
        android:layout_marginTop="30dp"
        android:text="India" />

    <CheckBox
        android:id="@+id/checkBoxChina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBoxIndia"
        android:layout_marginTop="30dp"
        android:text="China" />

    <CheckBox
        android:id="@+id/checkBoxNepal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBoxChina"
        android:layout_marginTop="30dp"

        android:text="Nepal" />

    <CheckBox
        android:id="@+id/checkBoxBhutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/checkBoxNepal"
        android:layout_marginTop="30dp"
        android:text="Bhutan" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxBhutan"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

</RelativeLayout>
